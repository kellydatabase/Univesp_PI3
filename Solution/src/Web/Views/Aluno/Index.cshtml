                                    <option value="3" selected>CONCLUÍDA</option>
                                }
                                else
                                {
                                    <option value="3">CONCLUÍDA</option>
                                }
                                @if (@Model.Aluno.Id_Status_Matricula == 4)
                                {
                                    <option value="4" selected>CANCELADA</option>
                                }
                                else
                                {
                                    <option value="4">CANCELADA</option>
                                }
